<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Student ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/studentID"
        android:layout_alignBottom="@+id/studentID"
        android:layout_alignParentStart="true"
        android:layout_x="23dp"
        android:layout_y="33dp" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_x="126dp"
        android:layout_y="18dp"
        android:id="@+id/editText2" />

    <TextView
        android:text="Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentID"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/textView6"
        android:layout_x="36dp"
        android:layout_y="122dp" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="33dp"
        android:layout_y="150dp"
        android:weightSum="1"
        android:id="@+id/radGroupYear">

    <RadioButton
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="104dp"
        android:layout_y="100dp"
        android:id="@+id/radioButton11" />

        <RadioButton
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="31dp"
            android:layout_y="190dp"
            android:id="@+id/radioButton12"
            android:layout_weight="1" />

        <RadioButton
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="122dp"
        android:layout_y="234dp"
        android:id="@+id/radioButton13"
            android:layout_weight="1" />

        <RadioButton
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="138dp"
        android:layout_y="264dp"
        android:id="@+id/radioButton14" />

    </RadioGroup>

    <TextView
        android:text="Semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/radioButton5"
        android:layout_alignParentStart="true"
        android:layout_x="173dp"
        android:layout_y="126dp" />

    <TextView
        android:text="Subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/radioButton9"
        android:layout_alignParentStart="true"
        android:layout_x="32dp"
        android:layout_y="307dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:layout_x="155dp"
        android:layout_y="303dp"
        android:id="@+id/spinner7"
        android:layout_width="226dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="185dp"
        android:layout_y="157dp"
        android:id="@+id/radGroupSeme">

    <RadioButton
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="182dp"
        android:layout_y="156dp"
        android:id="@+id/radioButton15" />

    <RadioButton
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="185dp"
        android:layout_y="210dp"
        android:id="@+id/radioButton16" />

    </RadioGroup>

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="261dp"
        android:layout_y="377dp"
        android:id="@+id/btnsubDetailsOK"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"/>


</AbsoluteLayout>